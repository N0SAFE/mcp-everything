{
    "name": "nextjs-directus-turborepo-template",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev": "docker compose -f docker-compose.dev.yml down && docker compose -f docker-compose.dev.yml up --build",
        "dev:local": "turbo dev",
        "build": "turbo build",
        "start": "docker compose -f docker-compose.prod.yml down && docker compose -f docker-compose.prod.yml up --build",
        "start:local": "turbo start",
        "test": "turbo test",
        "lint": "turbo lint",
        "format": "turbo pretify",
        "clean": "turbo clean",
        "init": "npm i && node init.js && npm run bootstrap",
        "bootstrap": "dotenv -e .env -- npm run bootstrap -w apps/api",
        "generate": "turbo generate",
        "docker:dev": "npm run dev",
        "docker:prod": "npm run start",
        "docker:build": "docker compose -f docker-compose.prod.yml build",
        "docker:build:web": "docker build -f docker/Dockerfile.web.prod . -t nextjs-directus-web:latest",
        "docker:build:api": "docker build -f docker/Dockerfile.api.prod . -t directus-api:latest",
        "prod:api": "docker compose -f docker-compose.api.prod.yml down && docker compose -f docker-compose.api.prod.yml up",
        "prod:api:build": "docker compose -f docker-compose.api.prod.yml down && docker compose -f docker-compose.api.prod.yml up --build",
        "prod:api:down": "docker compose -f docker-compose.api.prod.yml down",
        "prod:web": "docker compose -f docker-compose.web.prod.yml down && docker compose -f docker-compose.web.prod.yml up",
        "prod:web:build": "docker compose -f docker-compose.web.prod.yml down && docker compose -f docker-compose.web.prod.yml up --build",
        "prod:web:down": "docker compose -f docker-compose.web.prod.yml down",
        "prod:logs:api": "docker compose -f docker-compose.api.prod.yml logs -f",
        "prod:logs:web": "docker compose -f docker-compose.web.prod.yml logs -f",
        "kill:api": "trycli-options --command \"envcli kill-port $:{NEXT_PUBLIC_API_PORT} && envcli wait-on $:{NEXT_PUBLIC_API_URL} -r\" --silent",
        "api": "dotenv -e .env -- npm run --workspace=api --",
        "web": "dotenv -e .env -- npm run --workspace=web --",
        "@repo/ui": "dotenv -e .env -- npm run --workspace=@repo/ui --",
        "@repo/types": "dotenv -e .env -- npm run --workspace=@repo/types --",
        "@repo/tsconfig": "dotenv -e .env -- npm run --workspace=@repo/tsconfig --",
        "@repo/tailwind-config": "dotenv -e .env -- npm run --workspace=@repo/tailwind-config --",
        "@repo/eslint-config": "dotenv -e .env -- npm run --workspace=@repo/eslint-config --",
        "@repo/directus-sdk": "dotenv -e .env -- npm run --workspace=@repo/directus-sdk --",
        ".": "dotenv -e .env -- npm run --"
    },
    "devDependencies": {
        "@n0safe/envcli": "^1.0.2",
        "@n0safe/rununtil": "^1.0.5",
        "@n0safe/trycli": "^1.0.4",
        "prompts": "^2.4.2",
        "turbo": "^2.1.2"
    },
    "engines": {
        "node": ">=22"
    },
    "packageManager": "npm@10.8.1",
    "dependencies": {
        "dotenv": "^16.4.5",
        "dotenv-cli": "^7.4.2",
        "envfile": "^7.1.0",
        "kill-port-process": "^3.2.1",
        "random-hash": "^4.0.1",
        "wait-on": "^8.0.1",
        "wait-port": "^1.1.0"
    }
}