# API Production Deployment Environment Variables

# Database Configuration
DB_ROOT_PASSWORD=use-a-secure-password-in-production
DB_DATABASE=directus

# API Configuration
NEXT_PUBLIC_API_PORT=8055
# In production, this might be a domain name
NEXT_PUBLIC_API_URL=https://api.your-domain.com/
API_ADMIN_TOKEN=use-a-secure-token-in-production
API_PING_PATH=/server/health

# Security Settings for Production
SECRET=generate-a-secure-random-value-for-production
PUBLIC_URL=https://api.your-domain.com/
LOG_LEVEL=warn
RATE_LIMITER_ENABLED=true

# Optional: Project name for Docker resources
COMPOSE_PROJECT_NAME=my-project
