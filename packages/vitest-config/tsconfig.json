{
  "extends": "@repo/tsconfig/base.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "types": ["vitest/globals", "@testing-library/jest-dom"],
    "paths": {
      "@repo/vitest-config/*": [
        "./*"
      ],
      "@repo/*": [
        "../*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
