{
  "name": "@repo/bin",
  "version": "1.0.0",
  "main": "index.js",
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.7.0",
    "@repo/tsconfig": "*",
    "@types/node-cron": "^3.0.11",
    "@types/nunjucks": "^3.2.6",
    "@types/prompts": "^2.4.9",
    "copy-and-watch": "^0.1.8",
    "tsup": "^8.1.0",
    "typescript": "^5.5.3"
  },
  "exports": {
    "./*": "./dist/*"
  },
  "bin": {
    "scaffold": "dist/scaffold/index.js",
    "envCli": "dist/envCli.js",
    "scheduleCli": "dist/scheduleCli.js",
    "runUntil": "dist/runUntil.js",
    "runWhileError": "dist/runWhileError.js"
  },
  "scripts": {
    "copy": "copy-and-watch src/**/*.{html,json,njk} dist/",
    "copy:watch": "copy-and-watch --watch src/**/*.{html,json,njk} dist/",
    "tsup": "tsup --onSuccess \"npm run copy && npm run lint\"",
    "tsup:watch": "tsup --watch --onSuccess \"npm run copy && npm run lint\"",
    "init": "npm run build",
    "dev": "concurrently -c \"blue,green\" -n \"files,types\" \"npm run tsup:watch\" \"tsc --build --force --pretty --preserveWatchOutput --verbose --diagnostics --watch\"",
    "build": "concurrently -c \"blue,green\" -n \"files,types\" \"npm run tsup\" \"tsc --build --force --pretty --preserveWatchOutput --verbose --diagnostics\"",
    "lint": "eslint \"**/*.ts*\"",
    "test": "echo 'all packages:bin tests passed!'",
    "envCli": "node dist/envCli.js",
    "scheduleCli": "node dist/scheduleCli.js",
    "runUntil": "node dist/runUntil.js",
    "runWhileError": "node dist/runWhileError.js",
    "scaffold": "node dist/scaffold/index.js"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@repo/crontimev2": "*",
    "@repo/eslint-config": "*",
    "commander": "^12.1.0",
    "envfile": "^7.1.0",
    "node-cron": "^3.0.3",
    "nunjucks": "^3.2.4",
    "prompt": "^1.3.0",
    "tsc-hooks": "^1.1.2",
    "wait-cli": "^1.0.0"
  }
}
