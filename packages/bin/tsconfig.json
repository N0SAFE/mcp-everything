{
  "extends": "@repo/tsconfig/base.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "rootDir": "src",
    "outDir": "dist",
    "noEmit": false,
    "declaration": true,
    "declarationDir": "./dist",
    "emitDeclarationOnly": true,
    "declarationMap": true
  },
  "include": [
    "src/**/*",
    "src/.ts"
  ],
  "exclude": [
    "tsup.config.ts"
  ],
}